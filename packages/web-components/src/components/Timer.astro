<web-timer>
  <p>Timer: <span aria-label="count">0</span></p>
</web-timer>

<script>
  class WebTimer extends HTMLElement {
    constructor() {
      super();

      const countSpan = this.querySelector("[aria-label='count']");
      const parsed = Number.parseInt(countSpan.textContent);
      let count = Number.isNaN(parsed) ? 0 : parsed;

      const timer = setInterval(() => {
        count++;
        countSpan.textContent = count.toString();
      }, 1000);
    }
  };

  customElements.define("web-timer", WebTimer);
</script>
